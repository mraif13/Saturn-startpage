{
  "manifest_version": 3,
  "name": "Start Pager",
  "short_name": "startpager",
  "version": "8.0",
  "description": "Saturn Startpage: Free, open-source new tab replacement designed for speed and UX.",
  "author": "raifcoonjah",

  "icons": {
    "64": "/assets/img/icon64.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "chrome_settings_overrides": {
    "homepage": "index.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{aa7b057d-721f-4ed8-ae73-563f767006ee}",
      "update_url": "https://raw.githubusercontent.com/rc0j/Saturn-startpage/master/updates_v8.json"
    }
  },

  "permissions": ["storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}